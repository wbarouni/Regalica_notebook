{
  "version": 2,
  "name": "regalica-notebook",
  "buildCommand": "cd frontend && npm ci && npm run build --prod",
  "outputDirectory": "frontend/dist/regalica-frontend",
  "installCommand": "cd frontend && npm ci",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend-url.com/api/$1" // COMMENTÉ: L'URL du backend doit être définie ici une fois le backend déployé.
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

